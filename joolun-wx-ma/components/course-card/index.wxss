@import "/app.wxss";
.course-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 20rpx;
}
.course-box {
  width: 346rpx;
  height: 560rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 40rpx;
  border-radius: 20rpx;
	box-shadow: 0rpx 0rpx 60rpx rgba(211, 211, 211, 1);
}
.course-box .img-box {
  width: 100%;
  height: 349rpx;
  overflow: hidden;
}
.course-box .img-box image {
  width: 100%;
  height: 336rpx;
}