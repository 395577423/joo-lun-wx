<map id="myMap" longitude="{{longitude}}" latitude="{{latitude}}" scale="13" markers="{{markers}}" show-location="true" show-compass="true" style="width: 100%;height:100vh;" bindmarkertap="showModal">
</map>
<view class="radius cu-modal bottom-modal {{showModalStatus?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog" catchtap>
    <view class="padding bg-white">
      <view>
        <text class="text-xl">{{marker.name}}</text>
      </view>
      <view class="flex">
        <view class="flex-sub padding-sm margin-sm radius text-left">{{marker.address}}</view>
        <view class="flex-sub padding"> 
          <button class="cu-btn round bg-blue  text-right" bindtap="navigate">到这去</button>
        </view>
      </view>
      <view class="flex">
        <view class="flex-sub padding-sm  radius text-left">{{marker.contact}}</view>
        <text class="cuIcon-phone lg text-gray margin-right-xl "style="font-size:80rpx;"  bindtap="calling"></text>
      </view>
    </view>
  </view>
</view>